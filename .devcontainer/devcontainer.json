// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
  "name": "architecting",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "dockerComposeFile": "compose.yaml",
  "service": "architecting",
  // ${localWorkspaceFolderBasename} を使うとフォルダ名書かなくていいが、compose.yamlでボリュームマウントするフォルダ名を指定するので使えない
  // "workspaceFolder": "/${localWorkspaceFolderBasename}",
  "workspaceFolder": "/app",
  // [Dev Container configuration '.devcontainer/devcontainer.json' file already exists]のバグ？対応
  // https://github.com/microsoft/vscode-remote-release/issues/9302
  "initializeCommand": "ls",
  "mounts": [],
  // https://containers.dev/features
  // 環境にツールを追加したい場合は以下に設定を追加します。
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": true
      // OSS version .. ApacheLicense 2.0
      // https://github.com/moby/moby
      // "moby": "true"
    },
    // // "ghcr.io/devcontainers/features/azure-cli:1":{},
    // "ghcr.io/ebaskoro/devcontainer-features/sdkman:1": {}
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.autoSave": "afterDelay",
        "editor.formatOnSave": true,
        "telemetry.telemetryLevel": "off",
        // D2社内基準 デフォルト設定
        "chat.mcp.discovery.enabled": {
          "claude-desktop": true
        },
        "chat.tools.autoApprove": true,
        "chat.extensionTools.enabled": true,
        "chat.mcp.enabled": true
      },
      "extensions": [
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "ms-ceintl.vscode-language-pack-ja",
        "ryu1kn.partial-diff",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-ossdata.vscode-pgsql",
        "shd101wyy.markdown-preview-enhanced"
      ]
    }
  },
  // 開発環境のコンテナが起動毎に実行されます。
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh",
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    9222
  ],
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "vscode"
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "java -version",
  // Configure tool-specific properties.
  // "customizations": {},
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}